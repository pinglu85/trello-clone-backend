{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES2017",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"]
}
