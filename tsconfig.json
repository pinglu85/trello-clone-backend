{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "module": "ES2015",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
